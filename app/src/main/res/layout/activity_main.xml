<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="154dp"
        android:src="@drawable/pizzariavegariana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="283dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/Pizza1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Margherita" />

        <CheckBox
            android:id="@+id/Pizza2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milho" />

        <CheckBox
            android:id="@+id/Pizza3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palmito" />

        <CheckBox
            android:id="@+id/Pizza4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BrÃ³colis" />

        <CheckBox
            android:id="@+id/Pizza5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nutella com morango" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/vermelho"
        android:text="Selecionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />
</androidx.constraintlayout.widget.ConstraintLayout>